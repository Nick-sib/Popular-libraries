<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivOriginal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivConverted"
        android:contentDescription="@string/original_image" />

    <ImageView
        android:id="@+id/ivConverted"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/ivOriginal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/compressed_duplicate" />

    <Button
        android:id="@+id/bOpenImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>